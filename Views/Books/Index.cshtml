@model IEnumerable<Books>
@{
    ViewData["Title"] = "Book Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Books List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create New Books
            </a>
        </div>
    </div>
</div>
<br/>
<table class="table table-bordered table-striped" style="width: 100%;">
    <thead>
        <th>
            Category Name
        </th>
        <th>
            Display Name
        </th>
        <th>
            Actions
        </th>
    </thead>

    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td width="40%">
                    @book.Name
                </td>
                <td>
                    @book.DisplayOrder
                </td>
                <td>
                    <div class="row">
                        <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Books" asp-action="Delele" asp-route-id="@book.Id" class="btn btn-danger">
                            <i class="bi bi-x-circle"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>